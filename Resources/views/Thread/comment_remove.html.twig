<div class="rjm_comment_delete_form_holder">
    <form class="rjm_comment_delete_form" action="{{ url('rjm_comment_patch_thread_comment_state', {'id': id, 'commentId': commentId}) }}" data-rjm-comment-thread-id="{{ id }}" method="POST">

        {% block rjm_comment_form_fields %}
            {{ form_errors(form) }}

            {{ form_rest(form) }}
        {% endblock %}

        <input type="hidden" name="_method" value="patch" />

        <div class="rjm_comment_submit">
            {% block rjm_comment_form_submit %}
                <input type="submit" value="{{ 'rjm_comment_comment_delete' | trans({}, 'RJMCommentBundle') }}" />
            {% endblock %}
        </div>

    </form>
</div>
