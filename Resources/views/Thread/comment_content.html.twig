{% block rjm_comment_comment %}
<div id="rjm_comment_{{ comment.id }}" class="rjm_comment_comment_show rjm_comment_comment_depth_{{ depth }}" {% if parentId is defined %}data-parent="{{ parentId }}"{% endif %}>

    <div class="rjm_comment_comment_metas">
        {% block rjm_comment_comment_metas %}
            {% block rjm_comment_comment_metas_authorline %}
                {% trans from 'RJMCommentBundle' %}rjm_comment_comment_show_by{% endtrans %}
                <span class="rjm_comment_comment_authorname">
                    {% if comment is rjm_comment_in_state(constant('RJM\\CommentBundle\\Model\\CommentInterface::STATE_DELETED')) %}
                {% trans from 'RJMCommentBundle' %}rjm_comment_comment_deleted{% endtrans %}
                    {% else %}
                        {{ comment.authorName }}
                    {% endif %}
                </span> - {{ comment.createdAt|date }}
            {% endblock rjm_comment_comment_metas_authorline %}

            {% block rjm_comment_comment_metas_edit %}
                {% if rjm_comment_can_edit_comment(comment) %}
                <button data-url="{{ url("rjm_comment_edit_thread_comment", {"id": comment.thread.id, "commentId": comment.id}) }}" class="rjm_comment_comment_edit_show_form">{% trans from 'RJMCommentBundle' %}rjm_comment_comment_edit{% endtrans %}</button>
                {% endif %}
            {% endblock rjm_comment_comment_metas_edit %}

            {% block rjm_comment_comment_metas_delete %}
                {% if rjm_comment_can_delete_comment(comment) %}
                    {% if comment is rjm_comment_in_state(constant('RJM\\CommentBundle\\Model\\CommentInterface::STATE_DELETED')) %}
                        {# undelete #}
                        <button data-url="{{ url("rjm_comment_remove_thread_comment", {"id": comment.thread.id, "commentId": comment.id, "value": constant('RJM\\CommentBundle\\Model\\CommentInterface::STATE_VISIBLE') }) }}" class="rjm_comment_comment_remove">{% trans from 'RJMCommentBundle' %}rjm_comment_comment_undelete{% endtrans %}</button>
                    {% else %}
                        {# delete #}
                        <button data-url="{{ url("rjm_comment_remove_thread_comment", {"id": comment.thread.id, "commentId": comment.id, "value":  constant('RJM\\CommentBundle\\Model\\CommentInterface::STATE_DELETED')}) }}" class="rjm_comment_comment_remove">{% trans from 'RJMCommentBundle' %}rjm_comment_comment_delete{% endtrans %}</button>
                    {% endif %}
                {% endif %}
            {% endblock rjm_comment_comment_metas_delete %}

            {% block rjm_comment_comment_metas_voting %}
                {% if rjm_comment_can_vote(comment) %}
                    <div class="rjm_comment_comment_voting">
                        <button data-url="{{ url("rjm_comment_new_thread_comment_votes", {"id": comment.thread.id, "commentId": comment.id, "value": 1}) }}" class="rjm_comment_comment_vote">{% trans from 'RJMCommentBundle' %}rjm_comment_comment_show_voteup{% endtrans %}</button>
                        <button data-url="{{ url("rjm_comment_new_thread_comment_votes", {"id": comment.thread.id, "commentId": comment.id, "value": -1}) }}" class="rjm_comment_comment_vote">{% trans from 'RJMCommentBundle' %}rjm_comment_comment_show_votedown{% endtrans %}</button>
                        <div class="rjm_comment_comment_score" id="rjm_comment_score_{{ comment.id }}">{% include "RJMCommentBundle:Thread:comment_votes.html.twig" with { 'commentScore': comment.score } %}</div>
                    </div>
                {% endif %}
            {% endblock rjm_comment_comment_metas_voting %}
        {% endblock rjm_comment_comment_metas %}
    </div>

    <div class="rjm_comment_comment_body">
        {% block rjm_comment_comment_body %}
            {% if comment is rjm_comment_in_state(constant('RJM\\CommentBundle\\Model\\CommentInterface::STATE_DELETED')) %}
                {% trans from 'RJMCommentBundle' %}rjm_comment_comment_deleted{% endtrans %}
            {% else %}
                {% if comment is rjm_comment_raw %}
                    {{ comment.rawBody | raw }}
                {% else %}
                    {{ comment.body | nl2br }}
                {% endif %}
            {% endif %}
        {% endblock rjm_comment_comment_body %}
    </div>

    {% block rjm_comment_comment_children %}
        {% if view is not sameas('flat') %}
            <div class="rjm_comment_comment_replies">

                {% if rjm_comment_can_comment(comment) %}
                    <div class="rjm_comment_comment_reply">
                        {% block rjm_comment_comment_reply %}
                            <button data-url="{{ url('rjm_comment_new_thread_comments', {"id": comment.thread.id}) }}" data-name="{{ comment.authorName }}" data-parent-id="{{ comment.id }}" class="rjm_comment_comment_reply_show_form">{% trans from 'RJMCommentBundle' %}rjm_comment_comment_show_reply{% endtrans %}</button>
                        {% endblock rjm_comment_comment_reply %}
                    </div>
                {% endif %}

                {% if children is defined %}
                    {% include "RJMCommentBundle:Thread:comments.html.twig" with { "comments": children, "depth": depth + 1, "parentId": comment.id, "view": view } %}
                {% endif %}

            </div>
        {% elseif view is sameas('flat') and children is defined %}
            {% include "RJMCommentBundle:Thread:comments.html.twig" with { "comments": children, "depth": depth + 1, "parentId": comment.id, "view": view } %}
        {% endif %}
    {% endblock rjm_comment_comment_children %}

</div>
{% endblock rjm_comment_comment %}
